{
  "name": "lets-encrypt",
  "version": "1.0.0",
  "private": true,
  "description": "Let's Encrypt service for Hollowverse",
  "main": "index.js",
  "license": "Unlicense",
  "scripts": {
    "validate-file-names": "validate-file-names",
    "check-js": "tsc --noEmit",
    "lint-staged": "lint-staged"
  },
  "pre-commit": [
    "check-js",
    "validate-file-names",
    "lint-staged"
  ],
  "lint-staged": {
